# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.txt]
end_of_line = crlf

[*.php]
indent_style = tab
indent_size = 4
insert_final_newline = true
